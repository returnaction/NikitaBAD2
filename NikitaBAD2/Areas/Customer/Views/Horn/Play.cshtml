@model PropBet
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h2> Horn Bet</h2>

    @if (Model.ErrorMessage != null)
    {
        <p>@Model.ErrorMessage</p>
    }

    <p>Bet: @Model.Bet</p>
    <p>Dice Roll: @Model.RolledNumber</p>


    <div class="row">
        <form asp-action="Play">
            <input asp-for="@Model.Bet" name="bet" hidden />
            <input asp-for="@Model.RolledNumber" name="rolledNumber" hidden />
            <div class="form-group">
                <label for="userAnswer">Answer:</label>
                <input type="number" id="userAnswer" name="userAnswer" min="0"  required autofocus />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit Answer</button>
            </div>
        </form>
    </div>
</div>

